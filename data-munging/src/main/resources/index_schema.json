{


  "field_mapper": {
    "_comment": "map fields from Tika to Lucene fields",
    "_comment": "f = from (Tika); t = to (Lucene)",
    "ignore_case": "false",
    "mappings": [
      {
        "f": "dc:title",
        "t": "title"
      },
      {
        "f": "Content-Type",
        "t": "mime"
      },
      {
        "f": "tika_batch_fs:relative_path",
        "t": "rel_path"
      },
      {
        "f": "tika_batch_fs:relative_path",
        "t": "display_name",
		 "capture": {
          "find": "([^\/\\\\]+)$",
          "replace": "$1",
          "fail_policy":"store_as_is"
        }
      },
      {
        "f": "resourceName",
        "t": "file_name"
      },
      {
        "f": "X-TIKA:content",
        "t": "content"
      },
      {
        "f": "sha",
        "t": "sha"
      },
	  {
        "f": "dc:creator",
        "t": "author"
      },
      {
        "f": "dc:publisher",
        "t": "publisher"
      },
      {
        "f": "doi",
        "t": "doi"
      },
      {
        "f": "pmcid",
        "t": "pmcid"
      },
      {
        "f": "collection",
        "t": "collection"
      },
      {
        "f": "abstract",
        "t": "abstract"
      },
      {
        "f": "source_x",
        "t": "source_x"
      },
      {
        "f":"dcterms:created",
        "t":"created",
        "capture": {
          "find": "^(\\d\\d\\d\\d)-(\\d\\d)-(\\d\\d)T",
          "replace": "$1$2$3",
          "fail_policy": "skip"
        }

      },
	  {
	    "f":"X-TIKA:embedded_resource_path",
		"t":"embedded_path"
	  }
    ]
  },

  "system_fields" :{
    "default_content_field" : "content",
    "unique_file_key_field" : "_fid",
    "unique_doc_key_field" : "_did",
	"display_name_field" : "display_name",
	"rel_path_field" : "rel_path",
	"contains_digest_field" : "child_digests",
    "attachment_offset_field" : "_ao",
    "attachment_offset_sort_field" : "_aos",
	"embedded_path_field" : "embedded_path"
  },


  "fields":{
    "_fid":{
      "type":"text",
      "multivalued":"false",
      "index_analyzer":"keyword"
    },
    "_did":{
      "type":"text",
      "multivalued":"false",
      "index_analyzer":"keyword"
    },
    "_ao":{
      "type":"string",
      "multivalued":false
    },
	
	"child_digests": {
      "type":"text",
      "index_analyzer":"keyword",
      "multivalued":"true"
    },
	"embedded_path" : {
      "type":"text",
      "index_analyzer":"keyword",
      "multivalued":"false"	
	},
    "content":{
      "type":"text",
      "multivalued":"true",
      "index_analyzer":"persian_icu"
    },

    "title":{
      "type":"text",
      "multivalued":"true",
      "index_analyzer":"persian_icu"
    },
    "author": {
      "type": "text",
      "multivalued": "true",
      "index_analyzer": "persian_icu"
    },
    "publisher": {
      "type": "text",
      "multivalued": "false",
      "index_analyzer": "persian_icu"
    },
    "abstract": {
      "type": "text",
      "multivalued": "false",
      "index_analyzer": "persian_icu"
    },
    "collection": {
      "type": "text",
      "multivalued": "false",
      "index_analyzer": "persian_icu"
    },
    "doi": {
      "type": "text",
      "multivalued": "false",
      "index_analyzer": "persian_icu"
    },
    "pmcid": {
      "type": "text",
      "multivalued": "false",
      "index_analyzer": "persian_icu"
    },
    "license": {
      "type": "text",
      "multivalued": "false",
      "index_analyzer": "persian_icu"
    },
    "source_x": {
      "type": "text",
      "multivalued": "false",
      "index_analyzer": "persian_icu"
    },
    "created": {
      "type": "text",
      "multivalued": "false",
      "index_analyzer": "keyword"
    },
    "rel_path": {
      "type":"text",
      "index_analyzer":"persian_icu",
      "multivalued":"false"
    },
    "file_name": {
      "type":"text",
      "index_analyzer":"persian_icu",
      "multivalued":"false"
    },

    "sha": {
      "type":"text",
      "index_analyzer":"persian_icu",
      "multivalued":"false"
    },
    "mime": {
      "type":"text",
      "index_analyzer":"persian_icu",
      "multivalued":"false"
    },

    "display_name": {
      "type": "string",
      "multivalued": "false"
    }

  },

  "analyzers": {
    "persian_icu": {
      "charfilters": [
        {
          "factory": "oala.fa.PersianCharFilterFactory",
          "params": {}
        }
      ],
      "tokenizer": {
        "factory": "oala.standard.StandardTokenizerFactory",
        "params": {}
      },
      "tokenfilters": [
        {
          "factory": "oala.icu.ICUFoldingFilterFactory",
          "params": {}
        },
        {
          "factory": "oala.cjk.CJKBigramFilterFactory",
          "params": {}
        }
      ]
    },
    "keyword": {
      "tokenizer": {
        "factory": "oala.core.KeywordTokenizerFactory"
      }
    }
  }
}